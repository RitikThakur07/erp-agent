# LLM Configuration
LLM_PROVIDER=gemini  # openai, anthropic, gemini, or local
OPENAI_API_KEY=sk-your-key-here
ANTHROPIC_API_KEY=sk-ant-your-key-here
GEMINI_API_KEY=your-gemini-key-here
LOCAL_MODEL_PATH=./models/llama-2-7b.gguf

# Model Settings
DEFAULT_MODEL=gemini-2.5-flash  # or gemini-2.5-pro for better quality
TEMPERATURE=0.7
MAX_TOKENS=2000

# Embeddings
EMBEDDINGS_PROVIDER=openai  # openai or local
EMBEDDINGS_MODEL=text-embedding-3-small

# Vector Database
VECTOR_DB_PATH=./data/chroma
VECTOR_COLLECTION=erp_documents

# Application
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=True
WORKSPACE_ROOT=./workspace
UPLOAD_DIR=./uploads

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/erp_builder.db
